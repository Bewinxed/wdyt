{
  "name": "wdyt",
  "version": "0.1.15",
  "type": "module",
  "description": "Code review context builder for LLMs - what do you think?",
  "license": "MIT",
  "author": "bewinxed",
  "main": "src/cli.ts",
  "bin": {
    "wdyt": "./src/cli.ts"
  },
  "files": [
    "src/**/*.ts",
    "skills/**/*.md",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bewinxed/wdyt.git"
  },
  "bugs": {
    "url": "https://github.com/Bewinxed/wdyt/issues"
  },
  "homepage": "https://github.com/Bewinxed/wdyt#readme",
  "keywords": [
    "code-review",
    "llm",
    "context",
    "ai",
    "claude",
    "cli",
    "bun"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build ./src/cli.ts --compile --outfile wdyt",
    "test": "bun test",
    "prepublishOnly": "bun test"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "shell-quote": "^1.8.3"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0"
  }
}
